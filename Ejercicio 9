int led[] = {7, 8, 9, 10, 11, 12, 13};

void setup() { for(int i = 0; i < 7; i++) pinMode(led[i], OUTPUT); }

void loop() {
  for(int i = 0; i < 7; i++) { digitalWrite(led[i], HIGH); delay(100); digitalWrite(led[i], LOW); }
  for(int i = 5; i > 0; i--) { digitalWrite(led[i], HIGH); delay(100); digitalWrite(led[i], LOW); }
}
